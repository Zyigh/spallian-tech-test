{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Created by</th>
                <td>{{ article.author }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ article.subtitle }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="my-2">
        <a class="btn btn-secondary" href="{{ path('article_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    </div>

    {% if is_granted(constant('App\\Entity\\User::ROLE_ADMIN')[0]) %}
    {{ include('article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
